@model Rentman.CustomerViewModel
@{
    ViewData["Index"] = "List Customers";
}

<div class="text-center table-body">
	<h3 class="table-header">Customer List</h3>
	<table style="width:100%">
		<tr class="titles">
			<th>Id</th>
			<th>First Name</th> 
			<th>Last Name</th>
			<th>Drivers License</th>
			<th>Phone Number</th>
		</tr>
		@foreach (RentmanLib.Customer item in Model.CustomerList)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.first_name</td>
					<td>@item.last_name</td>
					<td>@item.DL_Number</td>
					<td>@item.phone_number</td>
				</tr>
			}
	</table>
</div>
